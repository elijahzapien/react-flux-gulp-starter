{
    "env": {
        "node": true,
        "es6": true,
        "browser": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "ecmaFeatures": {
            "modules": true,
            "classes": true,
            "jsx": true,
            "experimentalObjectRestSpread": true
        }
    },
    "plugins": [
        "babel",
        "react"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "rules": {
        "react/prefer-es6-class": 1,
        "react/sort-comp": 1,
        "react/self-closing-comp": 1,
        "react/jsx-first-prop-new-line": [
            1,
            "multiline"
        ],
        "react/jsx-key": 1,
        "react/jsx-max-props-per-line": [
            1,
            {
                "maximum": 2
            }
        ],

        "indent": [
            1,
            4,
            {
                "SwitchCase": 1
            }
        ],
        "no-unused-vars": [
            1,
            {
                "vars": "all",
                "args": "none",
                "varsIgnorePattern": "React"
            }
        ],
        "quotes": [
            1,
            "single"
        ],
        "linebreak-style": [
            1,
            "unix"
        ],
        "semi": [
            1,
            "always"
        ],
        "no-console": 0
    }
}
